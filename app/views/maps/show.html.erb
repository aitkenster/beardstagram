This beard was spotted in <%= @share.address %>

<div id='map'></div>
<script>

	var map = new GMaps({
	      div: '#map',
	      lat: -51.524128,
	      lng: -0.077364
	 });

	GMaps.geocode({
		// to show the actual location, insert <%= @share.address %> into the string
	  address: "Shoreditch High Street, London",
	  callback: function(results, status) {
	    if (status == 'OK') {
	      var latlng = results[0].geometry.location;
	      map.setCenter(latlng.lat(), latlng.lng());
	      map.addMarker({
	        lat: latlng.lat(),
	        lng: latlng.lng()
	      });
	    }
	  }
	});
</script>
